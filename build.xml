<?xml version="1.0"?>
<project name="test Project" default="phpunit">
  <property name="sitename" value="www.tutorialspoint.com"/>
  <property name="basedir" value="."/>
 <target name="phpunit" description="Run unit tests with PHPUnit">
  <exec executable="phpunit" failonerror="true">
   <arg path="${basedir}/test" />
  </exec>
 </target>
  <target name="phpunit" depends="process-build-resources-mysqli">
        <echo>MYSQLI unit tests started</echo>

        <exec executable="php" dir="${basedir}/test" failonerror="true" failifexecutionfails="true">
            <arg line="-d zend_extension=/usr/lib/php5/20090626/xdebug.so
                       /usr/bin/phpunit
                       --log-junit ${basedir}/build/logs/junit.xml
                       --coverage-html ${basedir}/build/coverage
                       --configuration ${source}/app/phpunit.xml.dist"/>
        </exec>

        <echo>MYSQLI unit tests finished</echo>
    </target>
</project>


